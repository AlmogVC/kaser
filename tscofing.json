{
    "compilerOptions": {
      "target": "es2018",
      "lib": ["es2018"],
      "module": "commonjs",
      "sourceMap": false,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules"
    ]
  }
  